<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<title>Rooms - Travlr Getaways</title>
	<link rel="stylesheet" href="css/style.css" type="text/css">
</head>
<body>
	<div id="background">
		<div id="page">
			{{> header}}
			<div id="contents">
				<div class="box">
					<div>
						<div class="body">
							<h1>Rooms</h1>
							<ul id="rooms">
								{{#each room}}
								<li>
									<a href="/{{this.link}}"><img src="images/{{image}}" alt="Img"></a>
									<h2><a href="/{{this.link}}">{{name}}</a></h2>
									<p>{{description}}</p>
									<span class="rate">{{rate}}</span>
								</li>
								{{/each}}
							</ul>
						</div>
					</div>
				</div>
			</div>
		</div>
		{{> footer}}
	</div>
</body>
</html>

